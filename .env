# config/env.template
# Crypto Alpha Scout 环境变量模板
# 复制此文件为 .env 并填入实际值

# ============================================
# Infisical 密钥管理配置
# ============================================
INFISICAL_URL=http://localhost:8090
INFISICAL_PROJECT_ID=your-project-id-here
INFISICAL_SERVICE_TOKEN=your-service-token-here
INFISICAL_ADMIN_EMAIL=admin@cryptoalphascout.com
INFISICAL_ADMIN_PASSWORD=SecureAdmin123!

# Infisical 内部配置
INFISICAL_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
INFISICAL_ENCRYPTION_KEY=your-32-char-encryption-key-here-change-this
INFISICAL_SITE_URL=http://localhost:8090
INFISICAL_HTTPS_ENABLED=false

# ============================================
# 数据库配置
# ============================================
DATABASE_URL=postgresql://crypto_user:crypto_pass@localhost:5432/crypto_scout
POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=crypto_pass
POSTGRES_DB=crypto_scout

# ============================================
# 消息队列配置
# ============================================
RABBITMQ_URL=amqp://crypto_user:crypto_pass@localhost:5672/
RABBITMQ_USER=crypto_user
RABBITMQ_PASS=crypto_pass

# ============================================
# 缓存配置
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# 外部API密钥
# ============================================
ETHERSCAN_API_KEY=your-etherscan-api-key-here
GOPLUS_API_KEY=your-goplus-api-key-here
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ============================================
# 安全配置
# ============================================
JWT_SECRET=your-jwt-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-32-characters
SECRET_KEY=your-app-secret-key-here

# ============================================
# 应用配置
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
WEB_PORT=8000
DEBUG=false

# ============================================
# MongoDB 配置 (用于 Infisical)
# ============================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=SecureMongo123!

# ============================================
# ML 模型配置
# ============================================
ML_MODEL_PATH=./ml_models
MODEL_RETRAIN_INTERVAL=86400  # 24小时 (秒)

# ============================================
# 监控配置
# ============================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_SECRET_KEY=your-grafana-secret-key

# ============================================
# 网络配置
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# 邮件配置 (可选)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@cryptoalphascout.com

# ============================================
# 备份配置
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d
BACKUP_STORAGE_PATH=./backups

# ============================================
# 性能配置
# ============================================
MAX_WORKERS=4
WORKER_TIMEOUT=300
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ENABLED=true

# ============================================
# 开发配置
# ============================================
RELOAD_ON_CHANGE=true
SHOW_DOCS=false  # 生产环境设为 false
ENABLE_PROFILING=false
